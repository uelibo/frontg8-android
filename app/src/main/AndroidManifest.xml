<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.frontg8" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.MessageActivity"
            android:label="@string/title_activity_message"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.ConnectionTestActivity"
            android:label="@string/title_activity_connection_test" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.DeveloperActivity"
            android:label="@string/title_activity_developer"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.frontg8.view.MainActivity" />
        </activity>

        <service
            android:name=".lib.connection.LocalService"
            android:exported="false" />
        <service
            android:name=".lib.connection.ConnectionService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".view.AboutMeActivity"
            android:label="@string/title_activity_about_me" >
        </activity>
    </application>

</manifest>
