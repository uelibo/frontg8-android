<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="ch.frontg8.view.ContactActivity">

    <TextView android:text="@string/editcontact" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editPersonName"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Surname"
        android:ems="10"
        android:id="@+id/editPersonSurname"
        android:layout_below="@+id/editPersonName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPublickey"
        android:layout_below="@+id/editPersonSurname"
        android:layout_alignParentStart="true"
        android:ems="7"
        android:text="Publickey"
        android:layout_marginTop="6dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load"
        android:id="@+id/buttonLoadKey"
        android:layout_alignBottom="@+id/editPublickey"
        android:layout_alignEnd="@+id/editPersonSurname" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/buttonDelete"
        android:layout_below="@+id/editPublickey"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/buttonSave"
        android:layout_alignTop="@+id/buttonDelete"
        android:layout_toEndOf="@+id/buttonDelete" />


</RelativeLayout>
