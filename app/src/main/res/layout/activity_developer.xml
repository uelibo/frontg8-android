<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.frontg8.view.DeveloperActivity">

    <TextView android:text="Developer Settings" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle" />
    <TextView android:text="Status: " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewStatus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear DB"
        android:id="@+id/buttonClearDB"
        android:layout_below="@+id/textViewStatus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Test Data"
        android:id="@+id/buttonLoadTestData"
        android:layout_alignTop="@+id/buttonClearDB"
        android:layout_toEndOf="@+id/buttonClearDB" />

</RelativeLayout>
