<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.frontg8.view.DeveloperActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TLS Test"
        android:id="@+id/buttonTlsTest"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Config"
        android:id="@+id/buttonShowConfig"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonTlsTest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear data"
        android:id="@+id/buttonClearDB"
        android:layout_below="@+id/buttonTlsTest"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load test data"
        android:id="@+id/buttonLoadTestData"
        android:layout_alignTop="@+id/buttonClearDB"
        android:layout_toEndOf="@+id/buttonClearDB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show data"
        android:id="@+id/buttonShowDB"
        android:layout_alignTop="@+id/buttonClearDB"
        android:layout_toEndOf="@+id/buttonLoadTestData" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLog"
        android:scrollbars = "vertical"
        android:layout_below="@+id/buttonClearDB"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
